{
  "branches": [
    "main"
  ],
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md"
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "sed -i 's/<Version>[^<]*<\\/Version>/<Version>${nextRelease.version}<\\/Version>/' Directory.Build.props"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "Directory.Build.props",
          "CHANGELOG.md"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    [
      "@semantic-release/github",
      {
        "successComment": "ðŸŽ‰ This ${issue.pull_request ? 'PR is included in version' : 'issue has been resolved in version'} ${nextRelease.version}",
        "releasedLabels": false
      }
    ]
  ]
}
