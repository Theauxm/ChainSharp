<Project Sdk="Microsoft.NET.Sdk.Razor">

    <PropertyGroup>
        <TargetFramework>net10.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <AllowMissingPrunePackageData>true</AllowMissingPrunePackageData>
        <AssemblyName>Theauxm.ChainSharp.Effect.Dashboard</AssemblyName>
        <PackageDescription>Radzen Blazor Server Dashboard for ChainSharp</PackageDescription>
    </PropertyGroup>

    <ItemGroup>
        <ProjectReference Include="..\..\effect\ChainSharp.Effect\ChainSharp.Effect.csproj" />
        <ProjectReference Include="..\..\data\ChainSharp.Effect.Data\ChainSharp.Effect.Data.csproj" />
        <ProjectReference Include="..\..\orchestration\ChainSharp.Effect.Orchestration.Mediator\ChainSharp.Effect.Orchestration.Mediator.csproj" />
        <ProjectReference Include="..\..\orchestration\ChainSharp.Effect.Orchestration.Scheduler\ChainSharp.Effect.Orchestration.Scheduler.csproj" />
    </ItemGroup>

    <ItemGroup>
        <FrameworkReference Include="Microsoft.AspNetCore.App" />
        <PackageReference Include="Radzen.Blazor" Version="6.*" />
    </ItemGroup>

    <!-- Propagate RequiresAspNetWebAssets to NuGet consumers so blazor.web.js is resolved -->
    <ItemGroup>
        <None Include="build\**" Pack="true" PackagePath="build\" />
        <None Include="buildTransitive\**" Pack="true" PackagePath="buildTransitive\" />
    </ItemGroup>

</Project>
