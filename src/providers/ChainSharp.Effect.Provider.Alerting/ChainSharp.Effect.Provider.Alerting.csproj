<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net10.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <RootNamespace>ChainSharp.Effect.Provider.Alerting</RootNamespace>
        <AssemblyName>ChainSharp.Effect.Provider.Alerting</AssemblyName>
    </PropertyGroup>

    <ItemGroup>
        <ProjectReference Include="../../effect/ChainSharp.Effect/ChainSharp.Effect.csproj" />
        <ProjectReference Include="../../data/ChainSharp.Effect.Data/ChainSharp.Effect.Data.csproj" />
        <ProjectReference Include="../../orchestration/ChainSharp.Effect.Orchestration.Mediator/ChainSharp.Effect.Orchestration.Mediator.csproj" />
        <ProjectReference Include="../../analyzers/ChainSharp.Effect.Provider.Alerting.Analyzers/ChainSharp.Effect.Provider.Alerting.Analyzers.csproj" ReferenceOutputAssembly="false" OutputItemType="Analyzer" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.Extensions.Caching.Memory" Version="10.*" />
        <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="10.*" />
    </ItemGroup>

    <!-- Pack the analyzer DLL into the NuGet package so users get compile-time validation automatically -->
    <ItemGroup>
        <None Include="..\..\analyzers\ChainSharp.Effect.Provider.Alerting.Analyzers\bin\$(Configuration)\netstandard2.0\ChainSharp.Effect.Provider.Alerting.Analyzers.dll" Pack="true" PackagePath="analyzers/dotnet/cs" Visible="false" />
    </ItemGroup>

</Project>
